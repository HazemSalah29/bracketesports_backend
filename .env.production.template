# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# Application
NODE_ENV=production
PORT=5000

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/bracketesport?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# External APIs
RIOT_API_KEY=RGAPI-your-riot-games-api-key-here
NEWS_API_KEY=your-newsapi-org-key-here

# CORS Configuration
FRONTEND_URL=https://your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Virtual Currency
COIN_TO_USD_RATE=0.01
PLATFORM_FEE_PERCENTAGE=30

# Logging
LOG_LEVEL=info
