# Environment Variables
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/bracketesport
DB_NAME=bracketesport

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=7d

# Riot Games API - SECURE BACKEND ONLY
RIOT_API_KEY=your_riot_api_key_here
RIOT_BASE_URL=https://na1.api.riotgames.com
# IMPORTANT: Never expose these keys to frontend

# Backend URL (for internal API calls)
BACKEND_URL=http://localhost:5000

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Virtual Currency - COMPLIANCE ENFORCED
COIN_TO_USD_RATE=0.01
PLATFORM_FEE_PERCENTAGE=30
MAX_DAILY_COIN_PURCHASE=10000
MAX_ENTRY_FEE_COINS=5000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# News API
NEWS_API_KEY=your_news_api_key

# Email Service (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password

# Redis (for sessions and caching)
REDIS_URL=redis://localhost:6379

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
